{% set header = block("header") %}
{% set hero = block("hero") %}
{% set main = block("main") %}
{% set footer = block("footer") %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {% if subject.title is not empty %}
      <title>{{ subject.title }}</title>
    {% endif %}

    <!--[if gte mso 9]>
        <link rel="stylesheet" href="styles/css/outlook.css" type="text/css">
    <![endif]-->

    {% block head %}{% endblock %}
  </head>
  <body>
    {% embed "@template/modules/basic-layout.twig" %}
      {% block basic_layout__header %}
        {{ header }}
      {% endblock %}

      {% block basic_layout__hero %}
        {{ hero }}
      {% endblock %}

      {% block basic_layout__main %}
        {{ main }}
      {% endblock %}

      {% block basic_layout__footer %}
        {{ footer }}
      {% endblock %}
    {% endembed %}
  </body>
